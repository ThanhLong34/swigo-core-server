generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sys_authorities {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name      String @unique
  parentId Int
}

model sys_users {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  uuid      String @unique @ignore
  username  String @unique
  password  String
  email     String @unique
  nickName String
}

model sys_apis {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  path        String @unique
  description String
  group       String
  method      String
}

model sys_menus {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name      String  @unique
  path      String  @unique
  hidden    Boolean @default(false)
  icon      String
  title     String
  sort      Int
  parentId Int
}

model sys_buttons {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name        String @unique
  description String
  menuId     Int
}

// 1 user có thể được gán nhiều vai trò
model sys_authorities_users {
  id           Int @id @default(autoincrement())

  authorityId Int
  userId      Int
}

model sys_authorities_apis {
  id           Int @id @default(autoincrement())

  authorityId Int
  apiId       Int
}

model sys_authorities_menus {
  id           Int @id @default(autoincrement())

  authorityId Int
  menuId      Int
}

model sys_authorities_buttons {
  id           Int @id @default(autoincrement())

  authorityId Int
  buttonId    Int
}
