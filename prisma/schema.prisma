generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sys_authorities {
  id Int @id @default(autoincrement())

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  name      String @unique
  parent_id Int
}

model sys_users {
  id Int @id @default(autoincrement())

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  uuid      String @unique
  username  String @unique
  password  String
  email     String @unique
  nick_name String
}

model sys_apis {
  id Int @id @default(autoincrement())

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  path        String @unique
  description String
  group       String
  method      String
}

model sys_menus {
  id Int @id @default(autoincrement())

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  name      String  @unique
  path      String  @unique
  hidden    Boolean @default(false)
  icon      String
  title     String
  sort      Int
  parent_id Int
}

model sys_buttons {
  id Int @id @default(autoincrement())

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  name        String @unique
  description String
  menu_id     Int
}

// 1 user có thể được gán nhiều vai trò
model sys_authorities_users {
  id           Int @id @default(autoincrement())

  authority_id Int
  user_id      Int
}

model sys_authorities_apis {
  id           Int @id @default(autoincrement())

  authority_id Int
  api_id       Int
}

model sys_authorities_menus {
  id           Int @id @default(autoincrement())

  authority_id Int
  menu_id      Int
}

model sys_authorities_buttons {
  id           Int @id @default(autoincrement())

  authority_id Int
  button_id    Int
}
